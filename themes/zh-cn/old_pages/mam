	<{include file='form.htm'}>
	<script type="text/javascript">
		function hideForm1(){
			$('.side-box1').hide();
			$('.side-box2').show();
			setTimeout(function() {
				$('.side-box1').show();
				$('.side-box2').hide();
			}, 5000);
		}
		
		//jquery.validate
		var jsValidateTime1 = null;
		$("#formid2").validate({
			submitHandler: function(form) {
				var form = form;
				var $form = $(form);
				var firstName = form.firstName.value;
				var lastName = form.lastName.value;
				var email = form.email.value;
				var telephone = form.telephone.value;
				var country = form.country.value;
				var area = form.area.value;
				
				// Returns successful data submission message when the entered information is stored in database.
				var dataString = 'firstName='+ firstName + '&lastName='+ lastName + '&email='+ email + '&telephone='+ telephone+ '&country='+ country + '&area='+ area;
				// AJAX Code To Submit Form.
				$.ajax({
					type: "POST",
					url: "<{$http_root_www}>mamform",
					data: dataString,
					cache: false,
					success: function(result){
						if(result == 1){
							hideForm1();
							return false;
						}else{
							$form.find('.send-result').html('提交失败');
							clearTimeout(jsValidateTime1);
							jsValidateTime1 = setTimeout(function(){
								$form.find('.send-result').html('');
							}, 3000);
						}
					}
				});
				return false;
			}
		});
	</script>
